<header class="navbar navbar-dark navColor fixed-top" style="background-color: #3b5998;">
  <div class="container">
    <a class="navTitle" href="/">Shopmall</a>
    <% if logged_in? %>
      <div class="dropdown">
        <button type="" class="dropdown-toggle btn btn-outline-warning" data-toggle="dropdown">
          Welcome, <%= current_user.name.blank? ? current_user.email : current_user.name %>
        </button>
        <%= link_to 'Dashboard', "/dashboard/index", class: "btn btn-outline-info" if current_user.is_admin? %>
        <div class="dropdown-menu">
          <%= link_to 'MyOrders', order_list_home_index_path, class: "dropdown-item" %>
          <%= link_to 'EditInfo', edit_info_path, class: "dropdown-item" %>
          <%= link_to 'ChangePassword', change_password_path, class: "dropdown-item" %>
          <%= link_to 'Logout', logout_path, method: :delete, class: "dropdown-item" %>
        </div>
      </div>
    <% else %>
      <a href="/sessions/new" class="btn btn-outline-warning">Sign In</a>
    <% end %>
  </div>
</header>
