<div class="container jumbotron text-center">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <h1>Change Info</h1><br><br>
      <%= form_with scope: :user, url: update_info_path do |form| %>
        <label> Nickname: </label><br><%= form.text_field :name, class: "form-control", required: true, value: current_user.name || nil %><br>
        <label> Phone: </label><br><%= form.phone_field :phone, class: "form-control", required: true, value: current_user.phone || nil %><br>
        <label> Email: </label><br><%= form.email_field :email, class: "form-control", required: true, value: current_user.email || nil %><br><br>
        <%= form.submit "Update Info", data: { disable_with: "Updating..." }, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>