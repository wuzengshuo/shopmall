<div class="container jumbotron text-center">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <h1>Change Password</h1><br><br>
      <%= form_with scope: :user, url: change_password_path do |form| %>
        <label> Old Password: </label><br><%= form.password_field :old_password, class: "form-control", required: true %><br>
        <label> Password: </label><br><%= form.password_field :password, class: "form-control", required: true %><br>
        <label> Password Confirmation: </label><br><%= form.password_field :password_confirmation, class: "form-control", required: true %><br><br>
        <%= form.submit "Update Password", data: { disable_with: "Updating..." }, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>